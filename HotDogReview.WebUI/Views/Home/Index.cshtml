@model IEnumerable<HotDogReview.WebUI.Models.Establishment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<ul>
    @foreach(var item in Model)
    {
        <li>
            <h4>@item.Name</h4>
            <p>
                Nota @item.AverageRating (@item.Reviews.Count() avaliações)
            </p>
            <p>
                Endereço: @(item.Address ?? "<sem endereço>")
            </p>
            <p>
                @(item.Description ?? "<sem descrição>")
            </p>
        </li>
    }
</ul>